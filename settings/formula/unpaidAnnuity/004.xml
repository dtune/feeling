<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Formula-definition SYSTEM "Formula-definition.dtd">
<!-- 商品毎に計算公式はここに定義する -->
<Formula-definition>
	<UnpaidAnnuity desc="未払年金">
		<formula name="AnnuityBenifitStartedV" paras="t2" fraction="3" desc="年金支払開始日後のVTレート">
			if(annuityType==5){
				set{g1=max(g-t2,0)}
				{{1+(t2-1)*theta/100}*{a_g(g-t2)}
				+theta/100*Ia_n(g1)}
				*(1+gamma_2nashu)
			}else{
				a_g(g-t2)*(1+gamma_2nashu)
			}
		</formula>
		
		<formula name="UnpaidAnnuity" pvh="P" accessable="true" fraction="3" desc="年金一括払">
			if(f2==0){
				AnnuityBenifitStartedV(t2)
			}else{
				v^((12-f2)/12)*AnnuityBenifitStartedV(t2+1)
			}
		</formula>
	</UnpaidAnnuity>
</Formula-definition>